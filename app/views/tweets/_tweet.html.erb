<div class="shadow p-3 mb-3 bg-body rounded d-flex justify-content-between ">
  
  <div>
    <%= image_tag tweet.twitter_account.image, class: "rounded-circle" %>
    <%= link_to "@#{tweet.twitter_account.username}", "https://twitter.com/#{tweet.twitter_account.username}", target: :_blank, class:"text-decoration-none p-2"%>
     
    <div class="mt-4 font-monospace">
      <i><%= tweet.body %></i>
    </div>

    <div class="mt-4"> 
      <% if tweet.published? %>
        <%= link_to "View Tweet", "https://twitter.com/#{tweet.twitter_account.username}/status/#{tweet.tweet_id}", target: :_blank %>
      <% else %>
        Scheduled for <%= l tweet.publish_at, format: :short %>
        <%= link_to "Edit Tweet", edit_tweet_path(tweet)%>
      <% end %>
    </div>
  </div>
</div>
